<div id="event-view">
  <h3><em><%= event.name %></em></h3>
  <h4>Description: <%= event.description %></h4>
  <h4>Date: <%= event.date %></h4>
  <h5>Time: <%= event.start_time %> - <%= event.end_time %></h5><br>
  Address: <%= event.address_line_1 %><br>
     <%= event.address_line_2 %><br>
     <%= event.city %><br>
     <%= event.zip %><br>
     <%= event.country %>
  <p>
    <%= link_to "Edit", '/#{@wedding.id}/events/#{@event.id}/edit', :method => :get %> |
    <%= link_to "Delete", "/weddings/#{event.wedding.id}/events/#{event.id}/", method: :delete, data: {confirm: "Are you sure you want to delete this Event?"} %>
    <%= button_to "Guests", "/events/#{event.id}/guests", :method => :get %>
  </p>
</div>