<h2>All Registries for <%= @wedding.partner_1 %> &#38 <%= @wedding.partner_2 %></h2>
<%= link_to "Back to Events", wedding_path(@wedding) %>
<br/>
<br/>

<% @registries.each do |registry| %>
 <%= render partial: "form", locals: {registry: registry} %>
  <% if current_user == @wedding.user %>

  <% end %>

  <p><strong>Store: </strong><%= registry.store %></p>
  <p><strong>Link: </strong>
  <a href="<%= registry.link_to_registry %>" target= "_blank"><%= registry.link_to_registry %></a></p>
  <img class= "registry_image" src= '<%= registry.image_url.registry%>'>
  <br/>
  <% if current_user == @wedding.user %>
    <%= link_to "Edit", edit_wedding_registry_path(@wedding, registry) %> |
    <%= link_to "Delete", wedding_registry_path(@wedding, registry), method: :delete, data: {confirm: "Are you sure you want to delete this Registry link?"} %>
  <% end %>
<% end %>


