<h1>Wedding for <%= @wedding.partner_1 %> &#38 <%= @wedding.partner_2 %></h1>

<div id="events">
  <h2>Events:</h2>
  <%= form_for @wedding do |f| %>
    <div class="links">
      <%= link_to_add_association 'add event', f, :events %>
    </div>
    <h3>Event Capacity:</h3>
    <div class="links">
      <%= link_to_add_association 'add event capacity', f, :containers %>
    </div>
    <%= f.submit %>
  <% end %>

  <%= render @wedding.events %>
  <%= render @wedding.containers %>
</div>

