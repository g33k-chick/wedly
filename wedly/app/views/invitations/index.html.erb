<div class= "invitation-container">
<p class="regular_font">You have invited "<%= @invitations.size %>"</p> wedd
  <h1>Invitation List</h1>
  <p >Add an email and bring the people you like to your wedding.</p>
  <%= form_for([@wedding, Invitation.new]) do |f| %>
    <div class="field">
      <%= f.label :recipient_email %><br/>
      <%= f.text_field :recipient_email %>
    </div>
    <div class="action">
      <%= f.submit 'Invite' %>
    </div>
  <% end %>

  <% @invitations.each do |invitation| %>
  <p>
    <%= invitation.recipient_email %>
  </p>
  <% end %>
</div>