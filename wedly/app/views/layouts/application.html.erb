<!DOCTYPE html>
<html>

<head>
 <link href='http://fonts.googleapis.com/css?family=Bad+Script|Raleway' rel='stylesheet' type='text/css'>

  <title>Wed Web</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.19&key=#{Figaro.env.google_maps_api}" %>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>
<body>

  <div id="header">
    <% if current_user %>
      <%= link_to "WebWed", "/weddings", {:class => "header_text"}%> |
      <%= link_to "Create Your Wedding!", "/weddings/new", {:class => "header_text"} %> |
      <%= link_to "Join A Wedding", "/weddings", {:class => "header_text"} %> |
      <%= link_to "Logout", :logout, method: :post, :class => "header_text"  %> |

      <%= link_to "Profile", users_path, {:class => "header_text"} %>

      <a href= "users_path" class="profile_photo" src= '<%= current_user.photo.thumb %>'></a>


      <img class= "profile_photo" src= '<%= current_user.photo.thumb %>'>
      <br/>
      <p id="profile_name" '<%= current_user.first_name %>'>
    <% else %>
      <%= link_to "Register", new_user_path %> |
      <%= link_to "Create Your Wedding!", "/weddings/new" %> |
      <%= link_to "Join A Wedding", "/weddings" %> |
      <%= link_to "Login", :login %>
    <% end %>

  </div>
  <div>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
  </div>

<div class= "container_body">
  <%= yield %>
</div>
</body>
</html>
