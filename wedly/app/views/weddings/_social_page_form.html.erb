  <% if current_user %>
    <h4>Add some love notes to this wedding! </h4>
    <%= form_for([@comment.wedding, @comment]) do |f| %>
      <% if @comment.errors.any? %>
        <div id= "error_explanation">
          <h2><%= pluralize(@comment.errors.count, "Error") %> prohibited this note from being saved: </h2>
          <ul>
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %> </li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class= "field">
        <%= f.label :note %><br />
        <%= f.text_area :note %>
      </div>
      <div class = "actions">
        <%= f.submit %>
      </div>
    <% end %>

    <% else %>
    <p>Please <%= link_to "Log In", new_user_session_path %> to add a note. </p>
  <% end %>