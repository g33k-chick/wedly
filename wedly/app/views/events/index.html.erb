<h1>All Events for "<%= @current_user %>"</h1>

<% @events.each do |event| %>
  <h3><%= event.name %></h3>
  <h4><%= event.date %></h4>
  <h5><%= event.start_time%> - <%= event.end_time %></h5>
  <p><%= event.address_line_1 %></p>
  <p><%= event.address_line_2 %></p>
  <p><%= event.city %></p>

<%= button_to "Edit", "/events/#{event.id}/edit", :method => :get %>

<%= button_to "Delete", event, method: :delete, data: {confirm: "Are you sure you want to delete this Event?"} %>

<%= button_to "Guests", "/events/#{event.id}/guests", :method => :get %>

<br/>
<br/>
<% end %>






