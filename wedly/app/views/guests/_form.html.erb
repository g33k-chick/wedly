<div class = "guest_edit_container2">
  <div class = "guest_edit_container1">
    <div class = "guest_numbers">
      <%= form_for([@guest.wedding, @guest]) do |f| %>
        <div class = "create-guests" >
          <div class= "field">
            <%= f.label :first_name %>
            <br/>
            <%= f.text_field :first_name %>
          </div>
          <div class= "field">
            <%= f.label :last_name %>
            <br/>
            <%= f.text_field :last_name %>
          </div>
          <div class= "field">
            <%= f.label :RSVP %>
            <br/>
            <%= f.check_box :rsvp %>
          </div>
          <div class= "field">
            <%= f.label :food_choice %>
            <br/>
            <%= f.collection_select :food_id, @wedding.foods, :food_choice , :dish_name, {:prompt=>true}%>
          </div>
          <br/>
          <div class= "field">
            <%= f.label :food_restrictions %>
            <br/>
            <%= f.text_area :food_restrictions %>
          </div>
          <div class= "submit-button">
          <%= f.submit %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>