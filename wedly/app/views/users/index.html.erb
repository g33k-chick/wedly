
<h1>Welcome to your profile  <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %>!</h1>

    <%= current_user.address_line_1 %>, <%= current_user.address_line_2 %><br>
    <%= current_user.city %>,
    <%= current_user.province %><br>
    <%= current_user.country %><br>
    <%= current_user.zip %><br>
    <%= current_user.phone %><br>
    <%= current_user.email %>
    <p></p>

<% if current_user.my_wedding.present? %>
  <h3>Your Wedding</h3>
  <%= link_to wedding_path(current_user.my_wedding) do %>
    <%= current_user.my_wedding.partner_1 %> &#38 <%=current_user.my_wedding.partner_2 %>
  <% end %>
<% end %>

<% if current_user.weddings.present? %>
    <h3>Invitation to Weddings</h3>

    <% current_user.weddings.each do |wedding| %>
      <%= link_to wedding_path(current_user.wedding) do %>
        <div>
          <%= wedding.partner_1 %> &#38 <%= wedding.partner_2 %>
        </div>
    <% end %>
  <% end %>
<% end %>
<p></p>
<div id="map-canvas" data-latitude="<%= @current_user.latitude.to_f %>" data-longitude="<%= @current_user.longitude.to_f %>">
</div>
