<h1>Event <%= @event.name %></h1>
<%= link_to "Events", wedding_events_path %>
  <h4>Description: <%= @event.description %></h4>
  <h4>Date: <%= @event.date.strftime("%A, %B %e, %Y ") %></h4>
  <h5>Time: <%= @event.start_time.strftime("%m :%M %p ") %> - <%= @event.end_time.strftime("%m :%M %p ") %></h5>

  <p>Number of Tables for <%= @event.name %>: <%= @containers.count %></p>

<table>
  <tr>
    <th><h4><strong></strong></h4></th>
    <th><h4><strong>Table Name </strong></h4></th>
    <th><h4><strong>Capacity </strong></h4></th>
    <th><h4><strong></strong></h4></th>
    <th><h4><strong></strong></h4></th>
  </tr>

  <tr>
    <td><h4><strong>New</strong></h4></td>
    <%= form_for([@event.wedding, @event, Container.new]) do |f| %>
    <%= f.hidden_field :event_id, value: @event.id %>
      <div class= "field">
        <td><p><%= f.text_field :name %></p></td>
      </div>
      <div class= "field">
        <td><p><%= f.text_field :limit %></p></td>
      </div>

      <div class= "field">

        <td><p><%= f.collection_select :guest_id, @event.guests, :first_name, {:prompt=>true}%></p></td>
      </div>
      <td><p><%= f.submit "Add New Table" %></p></td>
  <% end %>
  </tr>

  <% @containers.each do |container| %>
    <tr>
      <td><p></p></td>
      <td><p><%= container.name %></p></td>
      <td><p><%= container.limit %></p></td>
      <td><p><%#= container.guest.try(:first_name) %></p></td>
      <td><%= link_to "Edit", edit_wedding_event_container_path(@event.wedding, @event, container) %> |
        <%= link_to "Delete", wedding_event_container_path(@event.wedding, @event, container), method: :delete, data: {confirm: "Are you sure you end want to delete this container?"} %></p></td>
    </tr>
  <% end %>
</table>