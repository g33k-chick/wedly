<div class = "menu_edit_container">
  <% if current_user == @wedding.user %>
    <%=form_for([@food.wedding,  @food])do |f| %>
      <div class = "nested-fields">
        <%= f.hidden_field :wedding_id, value: @wedding.id %>
        <div class= "field">
          <%= f.label "Menu Option Number" %>
          <br/>
          <%= f.number_field :food_choice %>
        </div>
        <div class= "field">
          <%= f.label :dish_name %>
          <br/>
          <%= f.text_field :dish_name %>
        </div>
        <div class= "field">
          <%= f.label :dish_description %>
          <br/>
          <%= f.text_area :dish_description %>
        </div>
        <div class= "submit-button">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>