<div id="event-view">
  <h3><em><%= link_to "#{event.name}", wedding_event_path(event.wedding, event) %></em></h3>
  <h4>Description: <%= event.description %></h4>

  <h4>Date: <%= event.date.strftime("%A, %B %e, %Y ") %></h4>
  <h5>Time: <%= event.start_time.strftime("%I :%M %p ") %> - <%= event.end_time.strftime("%I :%M %p ") %></h5>
  <strong>Address:</strong><br>
   <%= event.address_line_1 %><br>
   <% if event.address_line_2.length > 0 %>
    <%= event.address_line_2 %><br>
   <% end %>
   <%= event.city %><br>
   <%= event.zip %><br>
   <%= event.country %>

  <% if current_user.my_wedding.present? %>
    <p>
      <%= link_to "Edit", edit_wedding_event_path(event.wedding, event) %> |
      <%= link_to "Delete", wedding_event_path(event.wedding, event), method: :delete, data: {confirm: "Are you sure you want to delete this Event?"} %>
    </p>
  <% end %>

</div>

