  <%= form_for([@wedding, Guest.new]) do |f| %>
    <%= f.hidden_field :wedding_id, value: @wedding.id %>
    <div class= "field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class= "field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class= "field">
      <%= f.label :rsvp %>
      <%= f.text_field :rsvp %>
    </div>
    <div class= "field">
      <%= f.label :food_choice %>
      <%= f.text_field :food_choice %>
    </div>
    <div class= "field">
      <%= f.label :food_restrictions %>
      <%= f.text_area :food_restrictions %>
    </div>
    <%= f.submit "Add Guest" %>
  <% end %>



<% @guests.each do |guest| %>
  <p><strong>First name: </strong><%= guest.first_name %></p>
  <p><strong>Last name: </strong><%= guest.last_name %></p>
  <p><strong>RSVP: </strong><%= guest.rsvp %></p>
  <p><strong>Food Choice (number): </strong><%= guest.food_choice %></p>
  <p><strong>Any food restrictions: </strong><%= guest.food_restrictions %></p>

