<h1>Event <%= @event.name %></h1>
<%= image_tag('Beverage-Wine-256.png', :size => '75x75', :alt => "mailbox") %>
<div class="event_sing">
    <h4><%= @event.description %></h4>on<br/>
    <h4><%= @event.date.strftime("%A, %B %e, %Y ") %></h4>at<br/>
    <h5><%= @event.start_time.strftime("%I :%M %p ") %> to <%= @event.end_time.strftime("%I :%M %p ") %></h5>
      <%= @event.address_line_1 %>, <%= @event.address_line_2 %><br>
       <%= @event.city %><br>
       <%= @event.zip %><br>
       <%= @event.country %>
  <p>

  <% if current_user == @wedding.user %>
    <div id = "b" >
      <button class = "pure_button"><%= link_to "Update/View Tables for #{@event.name}", "/weddings/#{@wedding.id}/events/#{@event.id}/containers" %></button>
    </div>
  <% end %>
</div>
<br/>

<div id="map-canvas" data-latitude="<%= @event.latitude.to_f %>" data-longitude="<%= @event.longitude.to_f %>">
</div>

<script>
  window.nearbys = <%= raw @nearby_events.to_json %>
</script>

