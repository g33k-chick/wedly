<div id="event-view">
  <h3 class="event_name"><%= link_to "#{event.name}", wedding_event_path(event.wedding, event) %></h3>
  <div class = "event_sing">
    <p id= "b">Description</p>
    <p><%= event.description %></p>

    <h4>Date: <%= event.date.strftime("%A, %B %e, %Y ") %></h4>
    <h5>Time: <%= event.start_time.strftime("%I :%M %p ") %> - <%= event.end_time.strftime("%I :%M %p ") %></h5>
    <strong>Address:</strong><br>
     <%= event.address_line_1 %><br>
     <% if event.address_line_2.length > 0 %>
      <%= event.address_line_2 %><br>
     <% end %>
     <%= event.city %><br>
     <%= event.zip %><br>
     <%= event.country %>

    <% if current_user.my_wedding.present? %>
      <p>
        <button><%= link_to "Edit", edit_wedding_event_path(event.wedding, event) %></button>
        <button><%= link_to "Delete", wedding_event_path(event.wedding, event), method: :delete, data: {confirm: "Are you sure you want to delete this Event?"} %></button>
      </p>
    <% end %>

  </div>
</div>

